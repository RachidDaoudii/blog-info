<div class="bg-amber-500 text-gray-800 py-4 text-center">
  <h1 class="text-2xl font-bold">Form Add Article</h1>
</div>

<form
  action="/article/add"
  method="post"
  enctype="multipart/form-data"
  class="max-w-md mx-auto mt-8"
>
  <div class="mb-4">
    <input
      type="text"
      name="title"
      placeholder="Title"
      class="w-full px-4 py-2 border border-gray-300 rounded-md"
    />
  </div>

  <div class="mb-4">
    <textarea
      name="content"
      placeholder="Content"
      rows="5"
      class="w-full px-4 py-2 border border-gray-300 rounded-md"
    ></textarea>
  </div>

  <div class="mb-4">
    <input
      type="file"
      name="image"
      class="w-full px-4 py-2 border border-gray-300 rounded-md"
    />
  </div>

  <button
    type="submit"
    name="add"
    class="bg-blue-500 text-white px-4 py-2 rounded-md"
  >
    Add Article
  </button>
</form>

<% if (errorMessage) { %>
<div class="bg-red-500 text-white px-4 py-2 mt-4 rounded-md">
  <%= errorMessage %>
</div>
<% } %>
